<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <%= form.hidden_field "place_id" %>
  <div class="mb-3">
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </div>
  <div class="mb-3">
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </div>
  <div class="mb-3">
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </div>
  <div class="mb-3">
    <%= form.label "uploaded_image", :class => "form-label" %>
    <%= form.file_field "uploaded_image", :accept => "image/png,image/jpg,image/jpeg,image/gif", :class => "form-control" %>
  </div>
  <p>
    <%= form.submit %>
  </p>
<% end %>
