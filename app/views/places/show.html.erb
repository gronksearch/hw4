<h1>My Posts in <%= @place["name"] %></h1>

<div class="container px-4 text-center">
  <div class="row gx-5">
    <% for post in @posts %>
      <div class="col-md-3 col-sm-6">
        <div class="p-3 border bg-light">
          <h3><%= post["title"] %></h3>
          <h6><%= post["posted_on"] %></h4>
        
          <% if post.uploaded_image.attached? %>
            <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
          <% else %>
            <img src="<%= post["image"] %>" class="img-fluid">
          <% end %>
        
          <p><%= post["description"] %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<p>
  <a class="btn btn-primary" href="/posts/new?place_id=<%= @place["id"] %>" role="button">New Post</a>
</p>

<p>
  <a class="btn btn-secondary" href="/places" role="button">Back to All Places</a>
</p>